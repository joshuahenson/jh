{
  "name": "jh",
  "version": "1.0.0",
  "description": "Personal Site",
  "main": "app.js",
  "scripts": {
    "start": "node start.js",
    "build:webpack": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "build": "npm run clean && npm run build:webpack",
    "clean": "rimraf public/js",
    "build:sass": "node-sass --include-path scss sass/style.scss public/css/style.css",
    "build:css": "postcss --use autoprefixer -b 'last 2 versions' < public/css/style.css | postcss --use cssnano > public/css/style.min.css",
    "watch:sass": "nodemon -e scss -x \"npm run build:sass\"",
    "dev": "node app.js & npm run watch:sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshuahenson/jh.git"
  },
  "author": "Joshua Henson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joshuahenson/jh/issues"
  },
  "homepage": "http://joshuahenson.com",
  "dependencies": {
    "body-parser": "^1.15.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "nodemailer": "^2.4.2",
    "webpack": "^1.13.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "axios": "^0.12.0",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "lodash.throttle": "^4.1.1",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.5.2"
  }
}
